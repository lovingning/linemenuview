<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="@color/transparent"/>

                    <stroke
                        android:width="1.5dp"
                        android:color="@color/text_link_hacker"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="false">
        <layer-list>
            <item
                android:left="-2dp"
                android:right="-2dp"
                android:top="-2dp">
                <shape>
                    <solid android:color="@color/transparent"/>

                    <stroke
                        android:width="0.5dp"
                        android:color="@color/text_hint_hacker"/>

                </shape>
            </item>
        </layer-list>
    </item>
</selector>