<resources>>
    <!--App主题-->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="android:windowBackground"></item>-->
        <!--<item name="android:textColorPrimary"></item>-->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="android:textColorPrimary">@color/white_selected_1</item>
        <!--        <item name="android:colorControlNormal">@color/colorControlNormal</item>
                <item name="android:navigationBarColor">@color/navigationBarColor</item>-->
        <item name="colorAccent">@color/text_label_hacker</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:actionMenuTextColor">@color/blue_text_color</item>
        <item name="android:textColor">@color/white_selected_1</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--一般TextView的style-->
    <style name="TextViewStandard">
        <item name="android:minHeight">@dimen/prefer_view_height_48dp</item>
        <item name="android:drawablePadding">@dimen/view_padding_margin_32dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/view_padding_margin_16dp</item>
        <item name="android:paddingEnd">@dimen/view_padding_margin_16dp</item>
        <item name="android:paddingTop">@dimen/view_padding_margin_8dp</item>
        <item name="android:paddingBottom">@dimen/view_padding_margin_8dp</item>
    </style>

    <!--tabLayout中文字风格-->
    <style name="TextViewTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_title_15sp</item>
    </style>

    <!--ImageView的高度最大最小值限定-->
    <style name="ImageViewStandard">
        <item name="android:maxHeight">@dimen/max_view_height_64dp</item>
        <item name="android:minHeight">@dimen/smallest_view_height_24dp</item>
    </style>

    <!--ratingBar的样式-->
    <style name="customRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">@dimen/view_height_20dp</item>
        <item name="android:maxHeight">@dimen/view_height_20dp</item>
    </style>

    <!--toolBar主题-->
    <style name="AppTheme.AppBarOverlay"/>

    <!--Popup弹出框的属性值-->
    <style name="PopupThemeHacker">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">true</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:colorBackground">@color/colorAccentHacker</item>
        <item name="android:windowBackground">@color/colorAccentHacker</item>
        <item name="android:popupBackground">@color/colorAccentHacker</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/white_selected_1</item>
    </style>

    <!--底部弹出框的style-->
    <style name="ActivityBottomView">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!--window框从底部显示的动画-->
    <style name="ActivityBottomViewAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_activity_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_activity_menu_exit</item>
    </style>


    <!--***************************-->
    <!--**********之后部分暂未使用***********-->
    <!--***************************-->

    <!--无标题style-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--<item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>

    <!--dark模式下app属性-->
    <style name="AppThemeHacker" parent="AppTheme.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="colorPrimary">@color/colorPrimaryHacker</item>
        <item name="android:textColorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkHacker</item>
        <item name="colorAccent">@color/text_label_hacker</item>
        <item name="android:textSize">@dimen/text_size_normal_14sp</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/colorPrimaryHacker</item>
        <item name="android:textColorHint">@color/text_hint_hacker</item>
        <item name="android:textColor">@color/white_selected_1</item>
        <item name="android:editTextColor">@color/white_selected_1</item>
        <item name="android:editTextBackground">@drawable/selector_edit_text_background_hacker
        </item>
        <item name="android:popupTheme">@style/PopupThemeHacker</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
    </style>

    <!--dark模式下,TextInputLayout控件,hint的颜色值-->
    <style name="TextInputLayout_HintTextAppearance_Hacker" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/text_label_hacker</item>
    </style>

    <!--popup框style-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--全屏模式下,设置actionBar,window背景等-->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <!--全屏模式下,设置actionBar-->
    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <!--浅色模式下Dialog的style-->
    <style name="Theme.Light.Dialog" parent="Base.V7.Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--暂未使用-->
    <style name="TextViewHomeSlide">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:paddingLeft">@dimen/view_padding_margin_8dp</item>
        <item name="android:paddingRight">@dimen/view_padding_margin_8dp</item>
        <item name="android:paddingTop">@dimen/view_padding_margin_8dp</item>
        <item name="android:paddingBottom">@dimen/view_padding_margin_8dp</item>
    </style>

    <!--CardView的风格-->
    <style name="CardViewHomeSlide">
        <item name="android:background">@color/white_selected_1</item>
        <item name="android:layout_marginLeft">@dimen/view_padding_margin_16dp</item>
        <item name="android:layout_marginRight">@dimen/view_padding_margin_16dp</item>
        <item name="android:layout_marginTop">@dimen/view_padding_margin_8dp</item>
        <item name="android:layout_marginBottom">@dimen/view_padding_margin_8dp</item>
    </style>

    <!--popup框,从右侧显示-->
    <style name="PopupMenuRightAppear" parent="Base.Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:popupAnimationStyle">@style/PopupMenuRightAppearAnimation</item>
    </style>

    <!--popup框,从右侧显示的动画-->
    <style name="PopupMenuRightAppearAnimation">
        <item name="android:windowEnterAnimation">@anim/popupmenu_enter_gravity_right</item>
        <item name="android:windowExitAnimation">@anim/popupmenu_exit_gravity_right</item>
    </style>

    <!--window框从顶部显示的动画-->
    <style name="ActivityTopViewAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_activity_top_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_activity_top_exit</item>
    </style>


    <style name="text_13_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="text_12_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/text_color_gray</item>
    </style>

    <style name="text_12_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <style name="text_14_white">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="text_12_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4076FE</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">17sp</item>
    </style>


    <!--=========================dialog动画=========================-->
    <!--dialog默认动画,从中间往四周散开-->
    <style name="dialog_animation" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim_home</item>
        <item name="android:windowExitAnimation">@anim/dialog_out_anim_home</item>
    </style>
    <!--渐入渐出动画-->
    <style name="dialog_fade" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>
    <!--底部出来的动画-->
    <style name="dialog_bottom_to_up" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_translate_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_translate_out</item>
    </style>

    <!--默认弹框样式-->
    <style name="default_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--   <item name="android:windowIsFloating">true</item>dialog的头部，默认为ture,不显示-->
        <item name="android:windowNoTitle">true</item><!-- 去掉头部 ,否则点击dialog上面一点不消失-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--可以在此设置动画-->
        <!--      <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
              <item name="android:windowExitAnimation">@anim/dialog_out_anim</item>-->
    </style>
    <!-- ToolBar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/blue_40</item> <!--字体颜色-->
        <item name="android:textSize">15sp</item> <!--字体大小-->
    </style>
</resources>
